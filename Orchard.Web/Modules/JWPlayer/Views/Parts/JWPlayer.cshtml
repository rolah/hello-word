@using Orchard.UI.Resources
@{ Script.Require("jwplayer").AtHead(); }

@*@using Orchard.UI.Resources
@{ Script.Include("jwplayer.js").AtLocation(ResourceLocation.Head); }*@

<div id='mediaspace'>This text will be replaced</div>
<script type='text/javascript'>
    jwplayer('mediaspace').setup({
        'flashplayer': '@Url.Content(Model.PlayerSource)',
        'file': '@Url.Content(@Model.MediaFile)',
        'autostart': '@Model.AutoStart',
        @if (Model.Repeat) {<text>'repeat': 'always',</text>}
        'width': '@Model.Width',
        'height': '@Model.Height'
    });
</script>